@page "/myprofile"
@inject NavigationManager NavigationManager

<h3>My Profile</h3>

@if (isLoggedIn)
{
    <p>Welcome to your profile page!</p>
    <p>This page is accessible because you are logged in.</p>
    <p>Username: @username</p>
}
else
{
    <p>You are not logged in. Please <a href="/login">click here to log in</a>.</p>
}

@code {
    private bool isLoggedIn = false;
    private string username = "Default User";

    protected override void OnInitialized()
    {
        // Here, you would check if the user is logged in and set the username accordingly
        // This is a placeholder logic
        // You should replace this with actual authentication check
        isLoggedIn = true; // Set this based on actual login status
        username = "User123"; // Set this to the logged-in user's username
    }
}
